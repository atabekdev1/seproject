#!/usr/bin/env python
"""Django's command-line utility for administrative tasks."""
import os
import sys
import requests
from django.conf import settings

def main():
    """Run administrative tasks."""
    os.environ.setdefault('DJANGO_SETTINGS_MODULE', 'weatherprediction.settings')
    try:
        from django.core.management import execute_from_command_line
    except ImportError as exc:
        raise ImportError(
            "Couldn't import Django. Are you sure it's installed and "
            "available on your PYTHONPATH environment variable? Did you "
            "forget to activate a virtual environment?"
        ) from exc
    execute_from_command_line(sys.argv)

# Continuation of the code authored by Sarsenov Amirl√°n
def get_weather_data(city_name):
    """Fetch weather data for the given city using an API."""
    api_key = settings.API_KEY  # Assumes the key is stored in settings.py
    url = f"http://api.weatherapi.com/v1/current.json?key={api_key}&q={city_name}"
    
    try:
        response = requests.get(url)
        if response.status_code == 200:
            data = response.json()
            print(f"Weather in {city_name}: {data['current']['condition']['text']}")
        else:
            print(f"Error: Failed to get weather data. Status code: {response.status_code}")
    except Exception as e:
        print(f"An error occurred while fetching weather data: {e}")

if __name__ == '__main__':
    main()
    # Example call to the function for testing
    get_weather_data("Almaty")
